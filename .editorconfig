;.editorconfig

root = true
charset=utf8

[*]
end_of_line = lf
insert_final_newline = true

[**.js]
; path to optional external js beautifier, default is vim-jsbeautify/plugin/lib
; Javascript interpreter to be invoked by default 'node'
bin=node
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.html]
; Using special comments
; And such comments or apply only in global configuration
; So it's best to avoid them
;vim:path=~/.vim/bundle/js-beautify/js/lib/beautify-html.js
;vim:max_char=78:brace_style=expand
indent_style = space
indent_size = 2

[**.go]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[**.json]
indent_style = space
indent_size = 2

[**.yaml]
indent_style = space
indent_size = 2

[**.yml]
indent_style = space
indent_size = 2
